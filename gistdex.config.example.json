{
  "vectorDB": {
    "provider": "sqlite",
    "options": {
      "path": "./gistdex.db",
      "dimension": 768,
      "customSqlitePath": "/opt/homebrew/opt/sqlite/lib/libsqlite3.dylib",
      "sqliteVecPath": "node_modules/sqlite-vec/vec0.dylib"
    }
  },
  "customAdapters": {
    "pinecone": "./adapters/pinecone-adapter.js",
    "weaviate": "./adapters/weaviate-adapter.js"
  },
  "embedding": {
    "model": "text-embedding-004",
    "dimension": 768
  },
  "indexing": {
    "chunkSize": 1000,
    "chunkOverlap": 200,
    "batchSize": 100
  },
  "search": {
    "defaultK": 5,
    "enableRerank": true,
    "rerankBoostFactor": 0.1,
    "hybridKeywordWeight": 0.3
  }
}
